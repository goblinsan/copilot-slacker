{
  "name": "approval-service",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx src/server.ts",
    "lint": "eslint . --ext .ts",
    "build": "tsc -p .",
    "build:dist": "rm -rf dist && tsc -p .",
    "start:dist": "node dist/server.js",
    "docker:build": "docker build -t approval-service:local .",
    "docker:run": "docker run --rm -p 8080:8080 approval-service:local",
    "typecheck": "tsc -p . --noEmit",
  "test": "cross-env APPROVAL_STAGE_DIAG=1 vitest run --pool=threads --maxWorkers=1",
    "audit:export": "tsx src/cli-audit-export.ts",
    "load-sim": "tsx scripts/load-sim.ts",
    "smoke": "tsx scripts/smoke.ts",
    "reliability:sse": "tsx scripts/reliability-sse.ts"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^1.24.0",
    "@opentelemetry/sdk-trace-node": "^1.24.0",
    "@slack/web-api": "^7.0.0",
    "redis": "^4.7.0",
    "undici": "^6.18.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
